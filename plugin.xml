<?xml version="1.0" encoding="utf-8"?>
<plugin 
    id="wurm-plugin-webview" 
    version="0.0.3" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <name>WebView</name>
    <js-module name="webview" src="www/index.js">
        <clobbers target="WebView"/>
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="WebView">
                <param name="android-package" value="com.wurm.webview.WebView"/>
            </feature>
        </config-file>
        <config-file target="app/src/main/AndroidManifest.xml" parent="application">
            <activity 
                android:name="com.wurm.webview.WebViewActivity" 
                android:label="WebView"
                android:launchMode="standard"
                android:theme="@style/WebViewTheme"
            />
            <activity 
                android:name="com.wurm.webview.ModalActivity" 
                android:label="Modal"
                android:launchMode="standard"
                android:theme="@style/ModalTheme"
            />
        </config-file>
        <source-file src="src/android/WebView.java" target-dir="src/com/wurm/WebView"/>
        <source-file src="src/android/WebViewActivity.java" target-dir="src/com/wurm/WebView"/>
        <source-file src="src/android/ModalActivity.java" target-dir="src/com/wurm/WebView"/>
        <source-file src="src/android/Store.java" target-dir="src/com/wurm/WebView"/>
        <source-file src="src/android/Xml/modal_shape.xml" target-dir="res/drawable"/>
        <source-file src="src/android/Xml/WebViewTheme.xml" target-dir="res/values"/>
        <source-file src="src/android/Xml/ModalTheme.xml" target-dir="res/values"/>
        <source-file src="src/android/Xml/slide_up.xml" target-dir="res/animator"/>
        <source-file src="src/android/Xml/slide_down.xml" target-dir="res/animator"/>
        <source-file src="src/android/Xml/slide_left.xml" target-dir="res/animator"/>
        <source-file src="src/android/Xml/fade_out.xml" target-dir="res/animator"/>
        <source-file src="src/android/Xml/fade_in.xml" target-dir="res/animator"/>
        <source-file src="src/Assets/Audio/modal_shown.mp3" target-dir="res/raw"/>
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="WebView">
                <param name="ios-package" value="Webview" onload="false"/>
            </feature>
        </config-file>
        <source-file src="src/ios/Store.swift"/>
        <source-file src="src/ios/WebViewController.swift"/>
        <source-file src="src/ios/ModalController.swift"/>
        <source-file src="src/ios/Webview.swift"/>
        <source-file src="src/ios/Animations/HideAnimations.swift"/>
        <source-file src="src/ios/Animations/ShowAnimations.swift"/>
        <dependency 
            id="wurm-plugin-swift-support" 
            url="https://github.com/AhmedAyachi/wurm-plugin-swift-support"
        />
        <resource-file src="src/Assets/Audio/modal_shown.mp3"/>
    </platform>
    
    <platform name="browser">
        <js-module src="src/browser/WebView.js" name="WebView">
            <clobbers target="WebView"/>
        </js-module>
        <js-module src="src/browser/JsParser.js" name="WebviewJsParser">
            <runs/>
        </js-module>
    </platform>
    
</plugin>