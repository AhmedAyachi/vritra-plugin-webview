<?xml version='1.0' encoding='utf-8'?>
<plugin 
    id="cordova-plugin-webview" 
    version="1.0.0" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <name>Template</name>

    <js-module name="webview" src="www/WebView.js">
        <clobbers target="WebView"/>
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="template">
                <param name="android-package" value="com.ahmedayachi.webview.WebView" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/WebViewActivity.java" target-dir="src/com/ahmedayachi/webview/WebView" />
        <source-file src="src/android/WebView.java" target-dir="src/com/ahmedayachi/webview/WebView" />
    </platform>

    <platform name="browser">
        <js-module src="src/browser/TemplateProxy.js" name="TemplateProxy">
            <runs/>
        </js-module>
    </platform>
    
</plugin>