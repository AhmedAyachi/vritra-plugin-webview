<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WebView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/WebViewAnimation</item>
    </style>
    <style name="WebViewAnimation"> 
        <item name="android:activityOpenEnterAnimation">@android:anim/slide_in_left</item>
